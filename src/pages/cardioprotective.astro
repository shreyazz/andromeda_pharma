---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Andromeda Pharma">
    <div
    class=" md:grid grid-cols-1 md:grid-cols-3 md:grid-rows-2 items-center justify-center justify-items-center gap-[5rem] md:gap-11 my-[10vh] w-[90%] mx-auto text-gray-700"
>

        <div class="flex flex-col bg-white rounded-md">
            <img
                src="/c40.png"
                alt=""
                class="h-[50vh] object-cover"
            />
            <div class="p-5 flex flex-col gap-2">
                <h2 class="font-medium text-2xl">Cardiotel 40</h2>
                <p class="text-base">
                    Telmisartan IP 40mg Tablet
                    The Cardiometabolic Sartan
                </p>
                <ul class="mt-6 flex flex-col gap-4">
                    <li><span class="font-normal">For The Effective
                        Management of Hypertension</li>
                    <li><span class="font-semibold">Quality Certification</span> - WHO, GMP</li>
                </ul>
            
            </div>
        </div>
        <div class="flex flex-col bg-white rounded-md">
            <img
                src="/ct40.png"
                alt=""
                class="h-[50vh] object-cover"

            />
            <div class="p-5 flex flex-col gap-2">
                <h2 class="font-medium text-2xl">Cardiotel CT-40</h2>
                <p class="text-base">
                    Telmisartan IP 40 mg +
Chlorthalidone IP 12.5 mg Tablet
                </p>
                <ul class="mt-6 flex flex-col gap-4">
                
                    <li><span class="font-normal">For Hypertension
                        Associated with Edema</li>
                    <li><span class="font-semibold">Quality Certification</span> - WHO, GMP</li>
                </ul>
            
            </div>
        </div>
        <div class="flex flex-col bg-white rounded-md">
            <img
                src="/ct625.png"
                alt=""
                class="h-[50vh] object-cover"

            />
