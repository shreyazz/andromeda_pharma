---

<Layout title="Andromeda Pharma">
  <div
  class="px-10 py-5"
>
  <div class="title">
      <h1 class="text-2xl font-bold text-gray-700"> Contact Us</h1>
      <h1 class="text-xl font-medium text-gray-700">Feel free to contact us & we will get back to you as soon as possible.</h1>
    </div>
    <div class="contact-form-wrapper flex flex-col w-full md:w-[50%]">
      <div class="contact-form py-5 mx-auto w-[100%] mt-7 flex flex-col gap-6">
        <div class="flex items-center justify-between w-full">
          <input
            type="text"
            name="name"
            id="name-inp"
            class="w-[45%] opacity-60 p-2 rounded-sm outline-none border-2 border-[#a8a8a8]"
            placeholder="Name"
          />
          <input
            type="text"
            name="email"
            id="email-inp"
            class="w-[45%] opacity-60 p-2 rounded-sm outline-none border-2 border-[#a8a8a8]"
            placeholder="Email"
          />
        </div>
        <div class="flex items-center justify-between">
          <input
            type="text"
            name="phone"
            id="phone-inp"
            class="w-[45%] opacity-60 p-2 rounded-sm outline-none border-2 border-[#a8a8a8]"
            placeholder="Phone Number"
          />
          <input
            type="text"
            name="subjext"
            id="subject-inp"
            class="w-[45%] opacity-60 p-2 rounded-sm outline-none border-2 border-[#a8a8a8]"
            placeholder="Subject"
          />
        </div>
        <textarea
          name="message"
          id="message-inp"
          cols="30"
          rows="10"
          placeholder="Message"
          class="resize-none w-full opacity-60 p-2 rounded-sm outline-none border-2 border-[#a8a8a8]"
        ></textarea>
        <div class="flex items-center justify-between">
          <button
            id="contact-submit-btn"
            class="bg-[#116a7b] p-3 w-[48%] text-white text-base capitalize font-normal rounded-sm hover:scale-95 ease-in transition-all"
            >Send as Email</button
          >
          <button
            id="contact-submit-btn-wa"
            class="bg-[#116a7b] p-3 w-[48%] text-white text-base capitalize font-normal rounded-sm hover:scale-95 ease-in transition-all"
            >Send on WhatsApp</button
          >
        </div>
      </div>
    </div>
