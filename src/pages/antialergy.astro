---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Andromeda Pharma">
    <div
        class="flex flex-col md:grid grid-cols-1 md:grid-cols-3 md:grid-rows-2 items-center justify-center justify-items-center gap-11 my-[10vh] w-[90%] mx-auto text-gray-700"
    >
        <div class="flex flex-col bg-white rounded-md">
            <img src="/levedaM.png" alt="" class="h-[50vh] object-cover" />
            <div class="p-5 flex flex-col gap-2">
                <h2 class="font-medium text-2xl">Leveda M</h2>
                <p class="text-base">
                    Tablet Fexodenadine Hydrochloride IP 120 mg + Montelukast 10
                    mg Tablet
                </p>
                <ul class="mt-6 flex flex-col gap-4">
                    <li>
                        <span class="font-normal"
                            >For Respiratory Allergies, Seasonal Allergies,
                            Nasal Allergies, Hay Fever and Asthma.</span
                        >
                        <li>
                            <span class="font-semibold"
                                >Quality Certification</span
                            > - WHO, GMP
                        </li>
                    </li>
                </ul>
            </div>
        </div>
        <div class="flex flex-col bg-white rounded-md">
            <img src="/leveda180.jpeg" alt="" class="h-[50vh] object-cover" />
            <div class="p-5 flex flex-col gap-2">
                <h2 class="font-medium text-2xl">Leveda 180</h2>
                <p class="text-base">
                    Tablet Fexodenadine Hydrochloride IP 180 mg Tablet
                </p>
                <ul class="mt-6 flex flex-col gap-4">
                    <li>
                        <span class="font-normal"
                            >For Respiratory Allergies, Seasonal Allergies,
                            Nasal Allergies, Hay Fever and Asthma.</span
                        >
                        <li>
                            <span class="font-semibold"
                                >Quality Certification</span
                            > - WHO, GMP
                        </li>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</Layout>
